<h1>Compose</h1>

<form action="/compose" method="post">


    <div class="form-group">
        <label><strong>Title</strong></label>
        <input class="form-control" type="text" name="blogTitle">
    </div>
    <div class="form-group">
        <label><strong>Post</strong></label>
        <textarea rows="5" cols="30" class="form-control" name="blogPost"></textarea>
    </div>  

    <button class="btn btn-primary" type="submit" name="button">Publish</button>

</form>

